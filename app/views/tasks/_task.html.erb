<div class="panel panel-info">
  <div class="panel-heading">
    <small>
      <%= link_to edit_task_path(task) do %>
      Created: <%= time_ago_in_words(task.created_at) %> ago by <%= task.user.email %>
      <% end %>
    </small>
    <%= link_to 'x', task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "pull-right" %>
  </div>
  <div class="panel-body">
    <%= task.content %>
  </div>
  <div class="panel-footer">
    <div class='btn-group btn-group-justified'>
      <% if task.state == "doing" %>
          <%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "to_do"),
                                                        method: :put, class: 'btn btn-info btn-block' %>
          <%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "done"),
                                                        method: :put, class: 'btn btn-info btn-block' %>
      <% elsif task.state == "done" %>
          <%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_task_path(task, state: "doing"),
                                                        method: :put, class: 'btn btn-info btn-block' %>
      <% else %>
          <%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_task_path(task, state: "doing"),
                                                        method: :put, class: 'btn btn-info btn-block' %>
      <% end %>
    </div>
  </div>
</div>
